# vim: ft=muttrc
set my_name   = "Jonathan Sumner Evans"
set realname  = "Jonathan Sumner Evans"
set from      = "Jonathan Evans <jonathanevans@mines.edu>"
set sendmail  = "/usr/bin/msmtp -a mines"
set mbox      = "+Mines/archive"
set postponed = "+Mines/drafts"
set signature = ~/.mutt/signatures/mines

